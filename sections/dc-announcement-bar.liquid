{{ "dc-announcement-bar.css" | asset_url | stylesheet_tag }}

<div class="announcement-bar">
  <div class="container rel">
    <span class="header-announcement">{{ section.settings.announcement_msg }}</span>
    <ul class="announcement-bar-list no-t-m">
      <li class="langs rel">
        <a href="#" class="lang-wrapper"><span id="main-lang">{{ request.locale.iso_code }}</span>
          <ul class="header-sub-lang-list">
            <li id="lang-nl"><span href="/" class="sub-lang">nl</span></li>
            <li id="lang-fr"><span href="/fr" class="sub-lang">fr</span></li>
            <li id="lang-en"><span href="/en" class="sub-lang">en</span></li>
          </ul>
        </a>
      </li>
      <li class="rel"><a href="{{ routes.account_url }}" class="round">{% include "account-icon" %}</a></li>
      <li class="rel"><a href="#" aria-label="cart-link" class="round icon-item cart-toggler cart-items-total rel" onClick="return false;">{{ cart.item_count }}</a></li>
    </ul>
  </div>
</div>

<script>
  
  $('.langs').click(function() {
  	$(this).toggleClass('clicked');
  });
  
  $('.sub-lang').click(function() {
    window.location.replace($(this).attr('href'));
  });
  
</script>

{% schema %}
  {
    "name": "Delcon Announcement Bar",
    "settings": [
		{
          "type": "text",
          "id": "announcement_msg",
          "default": "GRATIS LEVERING AAN HUIS VANAF â‚¬59,90",
          "label": "Announcement Bar message"
        }
	]
  }
{% endschema %}

