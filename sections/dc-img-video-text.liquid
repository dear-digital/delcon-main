<div class="image-video-text-block marg-top marg-bottom" style="background-color: {{ section.settings.background_color }}">
  <div class="container">
    <div class="flex-box justify-between align-center rel image-text-wrapper {% if section.settings.media_alignment == 'right' %}rev-cols{% endif %}">
      <div class="image-video-block rel {% if section.settings.section_type == 'video' %}img-w-txt-video-wrap {% if section.settings.video_link != '' %}custom-video{% endif %}{% endif %}">
        {% if section.settings.section_type == 'video' %}
          <img  class="video-cover" src="{{ section.settings.cover_img | image_url: height: 600 }}" loading="lazy" alt="Video title">
          {% if section.settings.video_link != '' %}
            <video class="cust-video" width="100%" height="100%" controls>
              <source src="{{ section.settings.video_link }}" type="video/mp4">
            </video>
          {% else %}
            <iframe class="no-disp yt-video" width="100%" height="100%" src="https://www.youtube.com/embed/{{ section.settings.product_video.id }}" frameborder="0">
            </iframe>
          {% endif %}
            <div id="play" class="play-btn">
              {% include 'icon-play-button' %}
            </div>
        {% else %}
          <img src="{{ section.settings.section_image | img_url: 'x590' }}" alt="{{ section.settings.section_title }} image" loading="lazy">
        {% endif %}
      </div>
      <div class="text-block">
        <span class="subheading-text">{{ section.settings.section_subtitle }}</span>
        <h2 class="heading-text">{{ section.settings.section_title }}</h2>
        <div class="about-text">{{ section.settings.section_text }}</div>
        {% if section.settings.section_link != blank %}
          <a href="{{ section.settings.section_url }}" rel="noreferrer" {% if section.settings.is_download %}target="_blank"{% endif %} class="about-link">{{ section.settings.section_link }}</a>
        {% endif %}
        {% if section.settings.section_btn_text != blank %}
          <a href="{{ section.settings.section_btn_url }}" class="btn">{{ section.settings.section_btn_text }}</a>
        {% endif %}
      </div>
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "DC Img or Vid with text",
    "settings": [
      {
        "label": "Background Color",
        "id": "background_color",
        "type": "color"
      },
	  {
        "type": "radio",
        "id": "media_alignment",
        "label": "Media alignment",
        "options": [
          {
            "value": "left",
            "label": "Left"
          },
          {
            "value": "right",
            "label": "Right"
          }
        ],
        "default": "left"
      },
	  {
        "type": "select",
        "id": "section_type",
        "label": "Section Type",
        "options": [
        {
        "value": "img_txt",
        "label": "Image Text"
        },
        {
        "value": "video",
        "label": "Video Text"
        },
        {
        "value": "link_within_text",
        "label": "Link within Text"
        }
        ],
        "default": "img_txt"
      },
      {
        "label": "Section Image",
        "id": "section_image",
        "type": "image_picker"
      },
      {
        "type": "video_url",
        "id": "product_video",
        "label": "Video URL",
        "accept": [
          "youtube",
          "vimeo"
        ]
      },
      {
        "type": "image_picker",
        "id": "cover_img",
        "label": "Video Cover Image"
      },
      {
        "type": "text",
        "id": "video_link",
        "label": "Custom Video Link"
      },
	  {
          "label": "Section sub title",
          "id": "section_subtitle",
          "type": "text"
      },
	  {
          "label": "Section title",
          "id": "section_title",
          "type": "text"
      },
      {
          "label": "Section text",
          "id": "section_text",
          "type": "html"
      },
	  {
          "label": "Section link text",
          "id": "section_link",
          "type": "text"
      },
      {
          "label": "Section url",
          "id": "section_url",
          "type": "url"
      },
      {
          "label": "Section Button text",
          "id": "section_btn_text",
          "type": "text"
      },
      {
          "label": "Section Button url",
          "id": "section_btn_url",
          "type": "url"
      }
	],
	"presets": [
    {
      "name": "DC Img or Vid with text"
    }
  ]
  }
