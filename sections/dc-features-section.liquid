{{ 'dc-features-section.css' | asset_url | stylesheet_tag }}

<div class="marg-bottom">
  <div class="container">
    <div class="features-content text-center flex-box justify-between">
      {% for block in section.blocks %}
        {% if block.type == 'features' %}
        <div class="features-content-wrap">
          <div class="feature-logo-wrap" style="background-color: {{ section.settings.feature_background }}">
            <img src="{{ block.settings.logo_img | img_url: "x50" }}" alt="{{ block.settings.logo_title }}">
          </div>
          <div class="feature-title">{{ block.settings.logo_title }}</div>
          <div class="feature-desc">{{ block.settings.logo_desc }}</div>
        </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Delcon Features Section",
    "settings": [
		{
          "type": "color",
          "id": "feature_background",
          "label": "Feature Backgrouund Color"
		}
	],
	"blocks": [
		{
			"type": "features",
			"name": "Feature Logo",
			"limit": 4,
			"settings": [
				{
					"type": "image_picker",
					"id": "logo_img",
					"label": "Logo SVG"
				},
				{
					"type": "text",
					"id": "logo_title",
					"label": "Logo Title"
				},
				{
					"type": "text",
					"id": "logo_desc",
					"label": "Logo Desc"
				}
			]
		}
	],
	"presets":[
      {
         "name":"Delcon Features Section"
      }
   ]
  }
{% endschema %}

