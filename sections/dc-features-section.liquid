{{ 'dc-features-section.css' | asset_url | stylesheet_tag }}

<div class="marg-top marg-bottom">
  <div class="container">
    <div class="features-content text-center flex-box align-center justify-around">
      {% for block in section.blocks %}
        {% if block.type == 'features-logos' %}
        <div class="features-content-wrap">
          <div class="feature-logo-wrap">
            <img src="{{ block.settings.logo_img | img_url: '86x' }}" alt="{{ block.settings.logo_title }}">
          </div>
          <div class="feature-title">{{ block.settings.logo_title }}</div>
          <div class="feature-desc">{{ block.settings.logo_desc }}</div>
        </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Delcon Features Section",
    "settings": [],
	"blocks": [
		{
			"type": "features-logos",
			"name": "Feature Logo",
			"limit": 4,
			"settings": [
				{
					"type": "image_picker",
					"id": "logo_img",
					"label": "Logo SVG"
				},
				{
					"type": "text",
					"id": "logo_title",
					"label": "Logo Title"
				},
				{
					"type": "text",
					"id": "logo_desc",
					"label": "Logo Desc"
				}
			]
		}
	],
	"presets":[
      {
         "name":"Delcon Features Section"
      }
   ]
  }
{% endschema %}

{% stylesheet %}
{% endstylesheet %}

