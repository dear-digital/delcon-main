{{ 'dc-contact-form.css' | asset_url | stylesheet_tag }}

<div class="marg-top-xl marg-bottom-xl">
  <div class="contact-form-wrapper">
    <div class="form-block" style="background-color: {{section.settings.section_background  }}">
      <div class="container rel">
        <div class="form-wrapper">
          <h2 class="contact-title tk-le-monde-livre-classic-byol">{{ section.settings.section_title }}</h2>
          <div class="contact-text">{{ section.settings.section_text }}</div>
        </div>
        <div class="contact-form-image" style="background-image: {{ section.settings.section_image | img_url: '698x' }}">
          
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "DC Contact Form",
    "settings": [
	  {
        "label": "Section Backgrgound",
        "id": "section_background",
        "type": "color"
      },
	  {
        "label": "Section Image",
        "id": "section_image",
        "type": "image_picker"
      },
	  {
        "label": "Section Title",
        "id": "section_title",
        "type": "text"
      },
	  {
        "label": "Section Text",
        "id": "section_text",
        "type": "text"
      }
	],
	"presets": [
    {
      "name": "DC Contact Form"
    }
  ]
  }
{% endschema %}

