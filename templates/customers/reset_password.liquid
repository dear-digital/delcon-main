{{ 'dc-customer.css' | asset_url | stylesheet_tag }}

<div class="customer reset-password">
  <div class="container">
  	<div class="flex-box justify-between align-center">
      <div class="customer-image-block rel">
        <img src="{{ "Hero_image_2x.png" | asset_img_url: 'x590' }}" alt="login image" loading="lazy">
      </div>
      <div class="customer-text-block rel">
        <h1 class="login-heading">{{ 'customer.reset_password.title' | t }}</h1>

        <p class="recover-text">{{ 'customer.reset_password.subtext' | t: email: email }}</p>

        {%- form 'reset_customer_password' -%}
          {%- if form.errors -%}
            <p class="form__message" tabindex="-1" autofocus>
              {{ 'customer.login_page.adjust_following' | t }}
            </p>
            {{ form.errors | default_errors }}
          {%- endif -%}

          <div class="field">
            <label for="password" class="no-disp">
              {{ 'customer.reset_password.password' | t }}
            </label>
            <div class="rel">
              <input
                type="password"
                name="customer[password]"
                id="password"
                autocomplete="new-password"
                {% if form.errors contains 'password' %}
                  aria-invalid="true"
                  aria-describedby="password-error"
                {% endif %}
                placeholder="{{ 'customer.reset_password.password' | t }}"
                required>
              <div id="show-pwd">{{ 'customer.login_page.show' | t }}</div>
            </div>
          </div>

          <div class="field">
            <label for="password_confirmation" class="no-disp">
              {{ 'customer.reset_password.password_confirm' | t }}
            </label>
            <div class="rel">
              <input
                type="password"
                name="customer[password_confirmation]"
                id="password_confirmation"
                autocomplete="new-password"
                {% if form.errors contains 'password_confirmation' %}
                  aria-invalid="true"
                  aria-describedby="password_confirmation-error"
                {% endif %}
                placeholder="{{ 'customer.reset_password.password_confirm' | t }}"
                required>
              <div id="show-pwd">{{ 'customer.login_page.show' | t }}</div>
            </div>
          </div>

          <button class="btn login-btn">{{ 'customer.reset_password.submit' | t }}</button>
        {%- endform -%}
      </div>
    </div>
  </div>
</div>

<script>

  $('#show-pwd').click(function(){
    $inputElement = $(this).parent().find("input[type=password]")
    if('password' == $($inputElement).attr('type')){
      $($inputElement).prop('type', 'text');
    }else{
      $($inputElement).prop('type', 'password');
    }
  });

</script>