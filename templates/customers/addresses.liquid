{{ 'dc-customer.css' | asset_url | stylesheet_tag }}
{{ 'dc-faq-section.css' | asset_url | stylesheet_tag }}

<div class="customer account">
  <div class="container">
    <div class="flex-box justify-between align-start">
      <div class="account-options-wrapper">
        <h1 class="account-heading">{{ 'customer.account.welcome_title' | t: name: customer.first_name }}</h1>
        <a href="{{ routes.account_url }}" class="account-option">{{ 'customer.account.title' | t }} <span class="arrow-right">{% include "arrow-right" %}</span></a>
        <a href="#" class="account-option selected">{{ 'customer.account.details' | t }} <span class="arrow-right">{% include "arrow-right" %}</span></a>
        <a href="/pages/my-pets" class="account-option">{{ 'customer.account.pets' | t }} <span class="arrow-right">{% include "arrow-right" %}</span></a>
      </div>
      <div class="account-details">
        <div class="order-address-wrapper">
          <div class="order-billing-address">
            <p class="address-title">{{ 'customer.order.billing_address' | t }}</p>
            {{ customer.billing_address | format_address }}
          </div>
          <div class="order-shipping-address">
            <p class="address-title">{{ 'customer.order.shipping_address' | t }}</p>
            {{ customer.shipping_address | format_address }}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>

  $(document).ready(function() {
    
  });

</script>